swiper-item{
  width: 100%;
}
swiper-item image{
  width: 100%;
  height: 200rpx;
}
.play-container{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 10rpx;
  flex-direction: row;
  margin-left: auto;
  margin-right: auto;
  width: 97%;
}
@media screen and (min-width:375px) {
  .play-container{
    width: 97%;
  }
}
@media screen and (min-width:414px) {
  .play-container{
    width: 95%;
  }
}
