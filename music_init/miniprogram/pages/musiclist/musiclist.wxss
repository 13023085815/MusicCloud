/* miniprogram/pages/musiclist/musiclist.wxss */
.detail-container{
    height: 320rpx;
    filter: blur(40rpx);
    opacity: 0.4;
}

.detail-mask{
    position: absolute;
    width: 100%;
    height: 320rpx;
    background-color: #333;
    top: 0;
    left: 0;
    z-index: -1;
}

.detail-img{
    width: 280rpx;
    height: 280rpx;
    margin-top: 10rpx;
    margin-right: 25rpx;
    border-radius: 7rpx;
    margin-left: 20rpx;
}
.detail-info{
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    justify-content: center;
}
.detail view{
    color: #ffffff;
    font-size: 24rpx;
}
.detail .detail-nm{
    font-size: 36rpx;
    font-weight: 400;
}

.detail{
    display: flex;
    align-items: center;
}